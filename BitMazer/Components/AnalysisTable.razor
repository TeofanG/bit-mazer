@using BitMazer.Enums
@using BitMazer.Models

<Grid TItem="AlgorithmAnalysis"
    Data="@Data"
    AllowSorting="true"
    Responsive="true"
    HeaderRowCssClass="bg-primary text-white border-bottom-0"
    Class="table table-hover">

    <GridColumns>
        <GridColumn TItem="AlgorithmAnalysis" 
                    HeaderText="Algorithm" 
                    SortKeySelector="item => item.Algorithm">
            @context.Algorithm
        </GridColumn>

        <GridColumn TItem="AlgorithmAnalysis" 
                    HeaderText="Encryption Time (ms)" 
                    SortKeySelector="item => item.EncryptionTimeMs"
                    HeaderTextAlignment="Alignment.Center"
                    TextAlignment="Alignment.Center">
            @context.EncryptionTimeMs.ToString("F2")
        </GridColumn>

        <GridColumn TItem="AlgorithmAnalysis" 
                    HeaderText="Chi Square" 
                    SortKeySelector="item => item.ChiSquareValue"
                    HeaderTextAlignment="Alignment.Center"
                    TextAlignment="Alignment.Center">
            @context.ChiSquareValue.ToString("F2")
        </GridColumn>

        <GridColumn TItem="AlgorithmAnalysis" 
                    HeaderText="Entropy" 
                    SortKeySelector="item => item.Entropy"
                    HeaderTextAlignment="Alignment.Center"
                    TextAlignment="Alignment.Center">
            @context.Entropy.ToString("F6")
        </GridColumn>

        <GridColumn TItem="AlgorithmAnalysis" 
                    HeaderText="Standard Deviation" 
                    SortKeySelector="item => item.StdDev"
                    HeaderTextAlignment="Alignment.Center"
                    TextAlignment="Alignment.Center">
            @context.StdDev.ToString("F2")
        </GridColumn>
    </GridColumns>
</Grid>

@code {
    [Parameter]
    public List<AlgorithmAnalysis> Data { get; set; } = new();

}
