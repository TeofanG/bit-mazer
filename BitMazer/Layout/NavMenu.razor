            <NavLink class="nav-link" href="analysis">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Analysis
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

